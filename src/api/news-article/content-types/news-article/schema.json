{
  "kind": "collectionType",
  "collectionName": "news_articles",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "News Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "coverImage": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 64
    },
    "date": {
      "type": "date",
      "required": true
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "media": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": true
    },
    "slug": {
      "type": "uid",
      "required": true
    }
  }
}
